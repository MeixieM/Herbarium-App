<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">


    <FrameLayout
        android:id="@+id/frame_top"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/green_button">

    </FrameLayout>

    <ImageView
        android:id="@+id/frame_bg"
        android:layout_width="match_parent"
        android:layout_height="511dp"
        android:layout_above="@+id/bottom_navigator"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/custom_frame">

    </ImageView>


    <Button
        android:id="@+id/btn_tips"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frame_bg"
        android:layout_alignBottom="@+id/frame_bg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="417dp"
        android:background="@drawable/button_selector"
        android:drawableStart="@drawable/ic_tips_green"
        android:padding="10dp"
        android:text="  Tips on taking pictures"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_faq"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frame_bg"
        android:layout_alignBottom="@+id/frame_bg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="346dp"
        android:background="@drawable/button_selector"
        android:drawableStart="@drawable/ic_faq"
        android:padding="10dp"
        android:text="  Frequently Asked Questions"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_tos"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frame_bg"
        android:layout_alignBottom="@+id/frame_bg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="271dp"
        android:background="@drawable/button_selector"
        android:drawableStart="@drawable/ic_tos"
        android:padding="10dp"
        android:text="  Term of Use"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frame_bg"
        android:layout_alignBottom="@+id/frame_bg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="37dp"
        android:padding="10dp"
        android:text="Version 1.0.0"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#938888"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Settings" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu" />


</RelativeLayout>